{
  "name": "podcast-club",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "dev": "expo start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:jest": "jest",
    "e2e:build:ios": "detox build -c ios.sim.debug",
    "e2e:build:android": "detox build -c android.emu.debug",
    "e2e:test:ios": "detox test -c ios.sim.debug",
    "e2e:test:android": "detox test -c android.emu.debug",
    "db:migrate": "node scripts/migrate.js",
    "mock:server": "node scripts/mock-server.js",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@expo-google-fonts/caveat": "^0.4.2",
    "@expo-google-fonts/onest": "^0.4.1",
    "@expo-google-fonts/paytone-one": "^0.2.3",
    "@nozbe/watermelondb": "^0.27.1",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-native-community/netinfo": "^11.4.1",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "@types/uuid": "^10.0.0",
    "base64-arraybuffer": "^1.0.2",
    "date-fns": "^4.1.0",
    "expo": "~53.0.0",
    "expo-audio": "^1.0.13",
    "expo-av": "~15.1.7",
    "expo-blur": "^15.0.7",
    "expo-clipboard": "^8.0.7",
    "expo-constants": "~17.1.7",
    "expo-contacts": "^15.0.9",
    "expo-crypto": "^15.0.7",
    "expo-dev-client": "~5.2.4",
    "expo-document-picker": "^14.0.7",
    "expo-file-system": "~18.1.11",
    "expo-font": "~13.3.2",
    "expo-haptics": "^15.0.7",
    "expo-image-picker": "^17.0.8",
    "expo-linear-gradient": "^15.0.7",
    "expo-linking": "~7.1.7",
    "expo-notifications": "^0.32.11",
    "expo-router": "~5.1.7",
    "expo-secure-store": "~14.2.4",
    "expo-sms": "^14.0.7",
    "expo-splash-screen": "~0.30.10",
    "expo-status-bar": "~2.2.3",
    "expo-symbols": "^1.0.7",
    "expo-system-ui": "~5.0.11",
    "expo-task-manager": "~13.1.6",
    "expo-web-browser": "^15.0.7",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.11",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-deck-swiper": "^2.0.19",
    "react-native-gesture-handler": "^2.28.0",
    "react-native-reanimated": "^4.1.2",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-svg": "15.11.2",
    "react-native-url-polyfill": "^2.0.0",
    "react-native-web": "^0.20.0",
    "react-native-worklets": "^0.6.0",
    "uuid": "^13.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@react-native-community/cli": "latest",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@types/lodash": "^4.14.202",
    "@types/react": "~19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/ui": "^3.2.4",
    "detox": "^20.18.0",
    "eslint": "^8.56.0",
    "eslint-config-expo": "~9.2.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^5.0.0",
    "happy-dom": "^19.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-expo": "~53.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "typescript": "~5.8.3",
    "vitest": "^3.2.4"
  },
  "private": true,
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
